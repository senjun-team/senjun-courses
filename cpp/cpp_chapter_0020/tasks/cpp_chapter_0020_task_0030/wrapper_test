#include "ut.hpp"

#include <algorithm>
#include <string>

namespace ut = boost::ut;

int main() {
    using namespace ut;

    "check user input"_test = [] {
        std::string str = R"(#INJECT-b585472fa)";
        str.erase(remove(str.begin(), str.end(), ' '), str.end());
        std::transform(str.begin(), str.end(), str.begin(),
        [](unsigned char c){ return std::tolower(c); });
        expect(str == "c++26");
    };
}