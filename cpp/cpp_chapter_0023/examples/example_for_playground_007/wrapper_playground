import std;

int main()
{
    // Биты числа flags от младшего 0-го к старшему 4-му:
    // 1, 0, 1, 0, 1
    int flags = 0b10101;

    
    // (1 << 2) - это число 0b100.
    // ~0b100 - это 0b11111111'11111111'1111111'11111011
    // Вычисляем
    //   0b00000000'00000000'00000000'0010101
    // & 0b11111111'11111111'1111111'11111011
    flags &= ~(1 << 2);

    std::println("flags={:b}", flags);
}